<script>
    $(document).ready(function(){
        init();

        function renderPage(){
            var blog_posts = getBlogDataBySlug("carlingwood-shop-the-look").posts.reverse();
            var current_post = blog_posts[0];
            renderSimple("#post_container", "#post_template", current_post);
        }
        loadMallDataCached(renderPage);
    });
</script>